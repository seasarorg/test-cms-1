<assembly>
  <id>sample</id>
  <formats>
    <format>war</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>src/main/webapp</directory>
      <outputDirectory></outputDirectory>
      <excludes>
        <exclude>WEB-INF/classes</exclude>
        <exclude>WEB-INF/lib</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>target</directory>
      <outputDirectory>WEB-INF/lib</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
      <excludes>
        <exclude>*-sources.jar</exclude>
        <exclude>*-tests.jar</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory></directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>*.txt</include>
      </includes>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>WEB-INF/lib</outputDirectory>
      <scope>runtime</scope>
    </dependencySet>
  </dependencySets>
</assembly>